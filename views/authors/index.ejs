<h1>Authors</h1>

<form action="/authors" action="get">
    <label for="name" for="name">Name</label>
    <input type="text" name="name" id="name" value="<%=searchOptions.name%>">
    <input type="submit" value="Search">
</form>
<% authors.forEach((author)=> { %>
    <div>
        <a href="/authors/<%=author.id%>">
            <%=author.name%>
        </a>
    </div>
    <% }) %>